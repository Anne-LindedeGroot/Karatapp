# Flutter Build Performance Configuration
# This file contains build optimizations for faster compilation

# Enable build caching
flutter.build-cache=true

# Optimize asset processing
flutter.asset-processing=true

# Enable incremental compilation
flutter.incremental-compilation=true

# Optimize for development builds
flutter.debug-optimizations=true

# Reduce build verbosity for faster output
flutter.build-verbosity=normal

# Enable parallel processing
flutter.parallel-builds=true

# Optimize for your specific hardware (adjust based on your CPU cores)
flutter.max-workers=4
